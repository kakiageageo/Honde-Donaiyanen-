<div class="container-fluid vh-100 bg01">
  <div class="row justify-content-center mr-3 mb-3">
    <h2>ログイン</h2>
  </div>
  

  <div class="container">
    <div class="row justify-content-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col my-3">
          <%= f.label "ユーザー名" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 50 %>
        </div>

        <div class="col my-3">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
        </div>

      <% if devise_mapping.rememberable? %>
        <div class="col mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label "パスワードを記憶する" %>
        </div>
      <% end %>
    
        <div class="row">
          <%= f.submit "　ログイン　", class: "btn btn-success mx-auto" %>
        </div>      
      <% end %>
    </div>
  </div>
</div>
