<% if genre.disliked_by?(current_user) %>
  <%= link_to book_dislikes_path(genre), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart-crack" aria-hidden="true" style="color: blue;"></i>
    <%= genre.dislikes.count %>
  <% end %>
<% else %>
  <%= link_to book_dislikes_path(genre), method: :post, remote: true do %>
    <i class="fa-solid fa-heart-crack" aria-hidden="true"></i>
    <%= genre.dislikes.count %>
  <% end %>
<% end %>