<% if genre.disliked_by?(current_user) %>
  <%= link_to book_dislikes_path(genre), method: :delete do %>
    <i class="fa-solid fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= genre.dislikes.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(genre), method: :post do %>
    <i class="fa-regular fa-heart" aria-hidden="true"></i>
    <%= genre.dislikes.count %>
  <% end %>
<% end %>